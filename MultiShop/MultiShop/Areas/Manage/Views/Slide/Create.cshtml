
@model CreateSlideVm

<div >
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create slide</h4>
         
            <form class="forms-sample" method="post" enctype="multipart/form-data">
               
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tittle">Tittle</label>
                    <input asp-for="Tittle" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                    <span asp-validation-for="Tittle"></span>
                </div> 
                <div class="form-group">
                    <label asp-for="SubTittle">SubTittle</label>
                    <input asp-for="SubTittle" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                    <span asp-validation-for="SubTittle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" type="text" class="form-control" id="exampleInputUsername1" placeholder="Order">
                    <span asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Button">Button Text</label>
                    <input asp-for="Button" type="text" class="form-control" id="exampleInputUsername1" placeholder="Button text">
                    <span asp-validation-for="Button"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light"><a asp-action="index" asp-controller="slide">Cancel</a></button>

            </form>
        </div>
    </div>
</div>