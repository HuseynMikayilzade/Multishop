@model PaginationVm<Product>

@{
    int count = (Model.CurrentPage-1)*5;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product</h4>
                <div class=" d-flex justify-content-between">
                    <p class="card-description">
                        <a asp-action="create" asp-controller="product"><button type="button" class="btn btn-success">Create Product</button> </a>
                    </p>
                    <nav aria-label="" style="margin-right:50px;">
                        <ul class="pagination">
                            <li class="page-item @(Model.CurrentPage<=1?"disabled":"")">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                            </li>

                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage-1==i ? "btn-success  active" : "")">
                                    <a class="page-link" asp-route-page="@(i+1)" asp-action="index" asp-controller="product">@(i + 1)</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage>=Model.TotalPage?"disabled":"")">
                                <a class="page-link" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-dark text-center">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:150px;height:150px;" src="~/assets/img/@item.Images.FirstOrDefault(i=>i.isPrimary==true)?.Url"></img>
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td align="center">
                                        <a asp-controller="product" asp-action="update" asp-route-id="@item.Id" type="button" class="btn btn-outline-warning btn-fw" alt="update"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-controller="product" asp-action="delete" asp-route-id="@item.Id" type="button" class="btn btn-outline-danger btn-fw" alt="delete"><i class="mdi mdi-delete-sweep"></i></a>
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id" type="button" class="btn btn-outline-primary btn-fw" alt="more"><i class="mdi mdi-more"></i> </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>