@model CreateCouponVm

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Coupon</h4>

            <form asp-action="Create" method="post" class="forms-sample">
                <!-- Coupon Name -->
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter coupon name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Discount Value -->
                <div class="form-group">
                    <label asp-for="Value"></label>
                    <input asp-for="Value" type="number" class="form-control" placeholder="Enter discount value" step="0.01" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="form-group">
                    <label asp-for="StartDate">Start Date</label>
                    <input asp-for="StartDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="form-group">
                    <label asp-for="EndDate">End Date</label>
                    <input asp-for="EndDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Total Usage Limit -->
                <div class="form-group">
                    <label asp-for="TotalUsageLimit">Total Usage Limit</label>
                    <input asp-for="TotalUsageLimit" type="number" class="form-control" placeholder="Total times coupon can be used" />
                    <span asp-validation-for="TotalUsageLimit" class="text-danger"></span>
                </div>

                <!-- Count Use Per User -->
                <div class="form-group">
                    <label asp-for="CountUsePerUser">Usage Limit Per User</label>
                    <input asp-for="CountUsePerUser" type="number" class="form-control" placeholder="Usage limit per user" />
                    <span asp-validation-for="CountUsePerUser" class="text-danger"></span>
                </div>

                <!-- Is Active -->
                <div class="form-group d-flex align-items-center">
                    <label asp-for="isActive" class="me-2 mb-0">Active Status</label>
                    <input asp-for="isActive" type="checkbox" class="form-check-input" style="margin-top: 0;" />
                </div>

                <!-- Buttons -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" asp-controller="Coupon" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
