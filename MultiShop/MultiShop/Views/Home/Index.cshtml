@model HomeVm
@{
    int count = 0;
}
<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    @foreach (var item in Model.Slides)
                    {

                        <li data-target="#header-carousel" data-slide-to="@count" class="@(count==0?"active":"")"></li>
                        count++;
                    }

                </ol>
                <div class="carousel-inner">
                    @{
                        count = 0;
                    }
                    @foreach (var item in Model.Slides)
                    {

                        <div class="carousel-item position-relative @(count==0 ? "active":"")" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="~/assets/img/@item.İmage" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.Tittle</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@item.SubTittle</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">@item.Button</a>
                                </div>
                            </div>
                        </div>
                        count++;
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            @foreach (var item in Model.SpecialProducts)
            {
               
                    <div class="product-offer mb-30" style="height: 200px;">
                        <img class="img-fluid" src="~/assets/img/@item.İmage" alt="">
                        <div class="offer-text">
                            <h6 class="text-white text-uppercase">@item.SubTittle</h6>
                            <h3 class="text-white mb-3">@item.Tittle</h3>
                            <a  class="btn btn-primary">@item.Button</a>
                        </div>
                    </div>
                
                
            }

        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Featured Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model.CustomServices)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="@item.Icon text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">@item.Name</h5>
                </div>
            </div>
        }

    </div>
</div>
<!-- Featured End -->
<!-- Categories Start -->
<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Categories</span></h2>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model.Categories)
        {
            int Count = item.Product.Count;
@*             if (Count >= 1)
            { *@
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <a class="text-decoration-none" href="">
                        <div class="cat-item d-flex align-items-center mb-4">
                            <div class="overflow-hidden" style="width: 100px; height: 100px;">
                                <img class="img-fluid" src="~/assets/img/@item.Image" alt="">
                            </div>
                            <div class="flex-fill pl-3">
                                <h6>@item.Name</h6>
                                <small class="text-body">@(Count>1?$"{Count} products":$"{Count} product") </small>
                            </div>
                        </div>
                    </a>
                </div>
            @* } *@
        }

    </div>
</div>
<!-- Categories End -->
<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3"> Products</span></h2>
    @await Html.PartialAsync("_RecentPartialView",Model.Products)
</div>
 
<!-- Products End -->
<!-- Offer Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">
        @foreach (var item in Model.SpecialProducts)
        {
            <div class="col-md-6">
                <div class="product-offer mb-30" style="height: 300px;">
                    <img class="img-fluid" src="~/assets/img/@item.İmage" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">@item.SubTittle</h6>
                        <h3 class="text-white mb-3">@item.Tittle</h3>
                        <a href="" class="btn btn-primary">@item.Button</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<!-- Offer End -->
<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Recent Products</span></h2>
    @await Html.PartialAsync("_RecentPartialView",Model.Products.OrderByDescending(p=>p.Id))
</div>
    
<!-- Products End -->
