@model ErrorVm

<div class="container mt-5">
    <div class="alert alert-danger text-center rounded-4 shadow-sm p-5">
        <h2 class="mb-3">⚠️ Oops!</h2>
        <p class="fs-5">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger">
                    @Model.Message
                </div>
            }
        </p>
        <a href="/" class="btn btn-outline-danger mt-4">Back to Home</a>
        <a href="@Model.ReturnUrl" class="btn btn-primary mt-4">Back</a>
    </div>
</div>
